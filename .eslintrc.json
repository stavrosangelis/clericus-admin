{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "eslint:recommended",
    "prettier",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "no-control-regex": 0,
    "prettier/prettier": [
      "warn",
      { "singleQuote": true }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": [0, { "forbid": [], "checkContextTypes": false, "checkChildContextTypes": false }],
    "react/no-danger": [0],
    "react-hooks/exhaustive-deps": "warn",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  },
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2021": true
 },
 "globals": {
    "localStorage": true,
    "sessionStorage": true,
    "window": true,
    "document": true,
    "navigator": true,
    "fetch": true,
    "FormData": true,
    "FileReader": true,
    "Blob": true,
    "Image": true,
    "getComputedStyle": true
  }
}
